<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/header.ejs %>
    <script>
      if (window.history.replaceState) {
        window.history.replaceState(null, null, window.location.href);
      }
      // setTimeout(function() {
      //   // after 2 seconds
      //   window.location.reload();
      // }, 2000);
    </script>
  </head>

  <body>
    <% include ../partials/nav.ejs %>
    <div class="main-container">
      <!-- <form name="form1" method="POST" action="/login/admin"> -->
      <table>
        <tr>
          <td><a href="">Admin Board</a></td>
          <td><a href="/login/admin">Add Member</a></td>
        </tr>
      </table>

      <!-- </form> -->
      <hr />

      <table>
        <tr>
          <td>Player Name</td>
          <td>Total Match</td>
          <td>Win</td>
        </tr>
        <% for(let i=0; i < data.length; i++) { %>
        <tr>
          <td><%= data[i].name %></td>
          <td><%= data[i].matchPlayed %></td>
          <td><%= data[i].win %></td>
          <td>
            <% let val = JSON.stringify(data) %>
            <input
              type="submit"
              value="Win"
              onclick="clickMe(<%=val%>,<%=i%>,'win')"
            />
          </td>
          <td>
            <input
              type="submit"
              value="Loose"
              onclick="clickMe(<%=val%>,<%=i%>,'loose')"
            />
          </td>
        </tr>
        <% } %>
      </table>
    </div>
    <script>
      function clickMe(data, i, type) {
        console.log(type);
        if (type === 'win') {
          data[i].win = data[i].win + 1;
          data[i].matchPlayed += 1;
        } else if (type === 'loose') {
          data[i].matchPlayed += 1;
        }

        fetch('/login/admin/addMember/1', {
          method: 'POST',
          headers: {
            Accept: 'application/json',
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(data),
        }).then((data) => {
          if (data.status === 200) {
            setTimeout(function() {
              window.location.replace(data.url);
            }, 400);
          }
        });
      }
    </script>
  </body>
</html>
